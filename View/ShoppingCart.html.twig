{% extends "Master/PortalTemplate.html.twig" %}

{% block body %}
    {% import _self as macros %}
    <div class="body-section">
        <br/>
        <div class="container grid-lg">
            <div class="columns">
                <div class="column col-12">
                    <form action="{{ fsc.url() }}" method="post">
                        <input type="hidden" name="action" value="edit"/>
                        <div class="panel mb-2">
                            <div class="panel-header">
                                <div class="panel-title text-center">
                                    <i class="fas fa-shopping-cart fa-3x" aria-hidden="true"></i>
                                    <p class="empty-title h5">{{ i18n.trans('shopping-cart') }}</p>
                                </div>
                            </div>
                            <div class="panel-body">
                                {{ macros.orderLines(fsc, i18n) }}
                            </div>
                            <div class="panel-footer">
                                <div class="columns">
                                    <div class="column col">
                                        <b>{{ i18n.trans('net') }}</b>:
                                        {{ fsc.divisaTools.format(fsc.presupuesto.neto) }}
                                    </div>
                                    <div class="column col text-right">
                                        <button type="submit" class="btn">
                                            {{ i18n.trans('save') }}
                                        </button>
                                        <button type="button" class="btn btn-success" onclick="this.form.action.value = 'order';
                                                this.form.submit();">
                                            {{ i18n.trans('finalize') }}
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    {% if fsc.pedidos %}
                        <div class="panel">
                            <div class="panel-header">
                                <div class="panel-title text-center">
                                    <i class="fas fa-file-invoice fa-2x" aria-hidden="true"></i>
                                    <p class="empty-title h5">{{ i18n.trans('orders') }}</p>
                                </div>
                            </div>
                            <div class="panel-body">
                                {{ macros.orderList(fsc, i18n) }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% macro orderLines(fsc, i18n) %}
    <div class="custom-scroll mb-2">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ i18n.trans('product') }}</th>
                    <th class="text-right" style="min-width: 100px;">{{ i18n.trans('price') }}</th>
                    <th class="text-right">{{ i18n.trans('quantity') }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for line in fsc.presupuesto.getLines() %}
                    <tr>
                        <td>
                            <b>{{ line.referencia }}</b> {{ line.descripcion | raw | nl2br }}
                        </td>
                        <td class="text-right">{{ fsc.divisaTools.format(line.pvpunitario) }}</td>
                        <td class="text-right">
                            <input type="number" name="quantity_{{ line.idlinea }}" value="{{ line.cantidad }}" min="0" class="form-input" required=""/>
                        </td>
                        <td>
                            <a href="{{ fsc.url() }}?action=delete&idline={{ line.idlinea }}" class="btn btn-error" title="{{ i18n.trans('delete') }}">
                                <i class="fas fa-trash-alt fa-fw" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="bg-warning">
                            {{ i18n.trans('no-data') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endmacro %}

{% macro orderList(fsc, i18n) %}
    <div class="custom-scroll mb-2">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ i18n.trans('date') }}</th>
                    <th class="text-right">{{ i18n.trans('status') }}</th>
                    <th class="text-right">{{ i18n.trans('total') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for order in fsc.pedidos %}
                    <tr>
                        <td>
                            <a href="{{ asset(order.url('public')) }}">
                                {{ order.fecha }} {{ order.hora }}
                            </a>
                        </td>
                        <td class="text-right">
                            {{ order.getStatus().nombre }}
                        </td>
                        <td class="text-right">
                            {{ fsc.divisaTools.format(order.total) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="bg-warning">
                            {{ i18n.trans('no-data') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endmacro %}