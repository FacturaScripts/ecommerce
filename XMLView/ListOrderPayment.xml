<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="id" required="true" />
            </column>
            <column name="platform" order="110">
                <widget type="text" fieldname="platform" readonly="true" />
            </column>
            <column name="custom-id" order="120">
                <widget type="text" fieldname="customid" readonly="true" />
            </column>
            <column name="amount" display="right" order="130">
                <widget type="money" fieldname="amount" />
            </column>
            <column name="fee" display="right" order="140">
                <widget type="money" fieldname="fee" />
            </column>
            <column name="status" order="150">
                <widget type="text" fieldname="status" />
            </column>
            <column name="date" display="right" order="160">
                <widget type="date" fieldname="creationtime" readonly="true" />
            </column>
        </group>
    </columns>
</view>